<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="16dp"
        android:layout_marginTop="30dp">


        <!-- Title -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000"

            />

        <!-- Done Button -->
        <TextView
            android:id="@+id/done_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="200dp"
            android:textColor="#000000"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <!-- Profile Picture -->
    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardCornerRadius="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/profile6" />

    </androidx.cardview.widget.CardView>

    <!-- Name Field -->
    <TextView
        android:id="@+id/namedisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Olivia Deniel"
        android:textSize="25sp"
        android:textColor="#000000"
        android:layout_marginLeft="122dp"
        android:layout_marginBottom="8dp" />

    <!-- Name Field -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="#666"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/name_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Olivia Daniel"
        android:textSize="16sp"
        android:textColor="#000"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <!-- Username Field -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="#666"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/username_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OliviaD"
        android:textSize="16sp"
        android:textColor="#000"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <!-- Contact Number Field -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Number"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="#666"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/contact_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+4274125443058"
        android:textSize="16sp"
        android:textColor="#000"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:layout_marginBottom="50dp" />

    <!-- Bio Field -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bio"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="#666"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="20dp"/>

    <EditText
        android:id="@+id/bio_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Just an average 14 year old"
        android:textSize="17sp"
        android:textColor="#000"
        android:padding="12dp"
        android:layout_marginTop="-42dp"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="16dp" />
</LinearLayout>