<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer border layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/>
            <stroke android:width="8dp" android:color="#463121"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>

    <!-- Mask to remove bottom center border -->
    <item
        android:bottom="0dp"
        android:left="58.5dp"
        android:right="60dp"
        android:height="8dp"
        android:width="8.5dp"
        android:gravity="bottom"
        >

        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/>
        </shape>
    </item>

</layer-list>
